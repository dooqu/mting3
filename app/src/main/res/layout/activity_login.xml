<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.0"

        android:gravity="center|center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"

            android:src="@mipmap/logo" />
    </LinearLayout>

    <Button
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_login_loginbtn"
        android:text="手机号登录"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lv_top_view"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="100dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0px"
                android:layout_height="1dp"
                android:layout_weight="1.0"
                android:background="@mipmap/login_left_dotted_line"
                android:textColor="@color/color_login_text_gray"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="游客登录"
                android:textColor="@color/color_login_text_gray"
                android:textSize="@dimen/text_16" />

            <View
                android:layout_width="0px"
                android:layout_height="1dp"
                android:layout_weight="1.0"
                android:background="@mipmap/login_right_dotted_line"
                android:textColor="@color/color_login_text_gray"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_login_third"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_login_weChat"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/login_wechat" />

            <ImageView
                android:id="@+id/imv_login_qq"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="56dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/login_qq" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="20dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal|bottom"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="登录即表示您已同意"
                android:textColor="@color/color_login_text_gray" />

            <TextView
                android:id="@+id/tv_user_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="《用户协议》"
                android:textColor="@color/color_blue" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>