<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:layout_marginTop="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/dialog_panel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_sound_setting_close"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/back"></ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_panel_article_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="声音设置"
            android:textColor="#666666"
            android:textSize="15sp"></TextView>

        <View
            android:id="@+id/dialog_panel_share"
            android:layout_width="49dp"
            android:layout_height="30dp">

        </View>
    </LinearLayout>

    <View
        android:id="@+id/view_panel_sound_hr3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/dialog_panel_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:background="#e0e0e0"></View>

    <TextView
        android:id="@+id/tv_panel_sound_setting_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_panel_sound_hr3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="声音选择"
        android:textColor="#333"
        android:textSize="15sp"></TextView>

    <!-- 声音设置，一横排 -->
    <LinearLayout
        android:id="@+id/dialog_panel_role_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_panel_sound_setting_role"
        android:orientation="horizontal">
        <!-- 佳怡 开始-->
        <LinearLayout
            android:id="@+id/portrait_button_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/portrait_0"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ico_jiayi"></ImageView>

                <ImageView
                    android:id="@+id/portrait_mask_0"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_ico_shape_huan"
                    android:visibility="invisible" />

                <ProgressBar
                    android:id="@+id/portrait_progress_0"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_margin="0dp"
                    android:background="@color/transparent"
                    android:padding="0dp"
                    android:visibility="invisible"></ProgressBar>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="佳怡"
                android:textColor="#666666"
                android:textSize="12sp"></TextView>
        </LinearLayout>

        <!-- 嘉欣 开始-->
        <LinearLayout
            android:id="@+id/portrait_button_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/portrait_1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ico_jiaxin"></ImageView>

                <ImageView
                    android:id="@+id/portrait_mask_1"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_ico_shape_huan"
                    android:visibility="invisible" />

                <ProgressBar
                    android:id="@+id/portrait_progress_1"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_margin="0dp"
                    android:background="@color/transparent"
                    android:padding="0dp"
                    android:visibility="invisible"></ProgressBar>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="嘉欣"
                android:textColor="#666666"
                android:textSize="12sp"></TextView>
        </LinearLayout>

        <!-- 子轩 开始-->
        <LinearLayout
            android:id="@+id/portrait_button_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/portrait_2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ico_zixuan"></ImageView>

                <ImageView
                    android:id="@+id/portrait_mask_2"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_ico_shape_huan"
                    android:visibility="invisible" />

                <ProgressBar
                    android:id="@+id/portrait_progress_2"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_margin="0dp"
                    android:background="@color/transparent"
                    android:padding="0dp"
                    android:visibility="invisible"></ProgressBar>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="子轩"
                android:textColor="#666666"
                android:textSize="12sp"></TextView>
        </LinearLayout>

        <!-- 子墨 开始-->
        <LinearLayout
            android:id="@+id/portrait_button_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/portrait_3"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ico_zimo"></ImageView>

                <ImageView
                    android:id="@+id/portrait_mask_3"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_ico_shape_huan"
                    android:visibility="invisible" />

                <ProgressBar
                    android:id="@+id/portrait_progress_3"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_margin="0dp"
                    android:background="@color/transparent"
                    android:padding="0dp"
                    android:visibility="invisible"></ProgressBar>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="子墨"
                android:textColor="#666666"
                android:textSize="12sp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_panel_sound_hr1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/dialog_panel_role_options"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="10dp"
        android:background="#e0e0e0"></View>

    <TextView
        android:id="@+id/tv_panel_sound_setting_vibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_panel_sound_hr1"
        android:text="倍速朗读"
        android:textColor="#333"
        android:textSize="15sp"></TextView>

    <RadioGroup
        android:id="@+id/rg_sound_setting_vibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_panel_sound_setting_vibrate"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_sound_setting_vrbrate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/bg_check_btn"
            android:drawablePadding="@dimen/setting_dimen_7"
            android:text="x0.7"
            android:textColor="#333333"
            android:textSize="@dimen/setting_font_13" />

        <RadioButton
            android:id="@+id/rb_sound_setting_vrbrate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/bg_check_btn"
            android:drawablePadding="@dimen/setting_dimen_7"
            android:text="x1.0"
            android:textColor="#333333"
            android:textSize="@dimen/setting_font_13" />

        <RadioButton
            android:id="@+id/rb_sound_setting_vrbrate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/bg_check_btn"
            android:drawablePadding="@dimen/setting_dimen_7"
            android:text="x1.5"
            android:textColor="#333333"
            android:textSize="@dimen/setting_font_13" />

        <RadioButton
            android:id="@+id/rb_sound_setting_vrbrate4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/bg_check_btn"
            android:drawablePadding="@dimen/setting_dimen_7"
            android:text="x2.0"
            android:textColor="#333333"
            android:textSize="@dimen/setting_font_13" />
    </RadioGroup>

    <View
        android:id="@+id/view_panel_sound_hr2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rg_sound_setting_vibrate"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#e0e0e0"></View>

</RelativeLayout>