<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_include" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="定时关闭"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/sw_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_time_title" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text=""
            android:textColor="#488def"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="28dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_count_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_close"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:button="@null"
                android:buttonTint="@color/selector_button_color"
                android:drawableRight="@drawable/bg_rg_set_timer"
                android:text="不开启"
                android:textColor="@color/c333333"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cutting_line" />

            <RadioButton
                android:id="@+id/rb_current"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:button="@null"
                android:background="@null"
                android:buttonTint="@color/selector_button_color"
                android:drawableRight="@drawable/bg_rg_set_timer"
                android:text="读完本篇后关闭" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cutting_line" />

            <RadioButton
                android:id="@+id/rb_time10"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:button="@null"
                android:buttonTint="@color/selector_button_color"
                android:drawableRight="@drawable/bg_rg_set_timer"
                android:text="10分钟" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cutting_line" />

            <RadioButton
                android:id="@+id/rb_time20"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:button="@null"
                android:buttonTint="@color/selector_button_color"
                android:drawableRight="@drawable/bg_rg_set_timer"
                android:text="20分钟" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cutting_line" />

            <RadioButton
                android:id="@+id/rb_time30"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:button="@null"
                android:buttonTint="@color/selector_button_color"
                android:drawableRight="@drawable/bg_rg_set_timer"
                android:text="30分钟" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>