<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/iv_broadcast_detail_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_default_bro" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99000000" />

            <ImageView
                android:id="@+id/iv_broadcast_detail_img"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="73dp"
                android:scaleType="fitXY"
                android:src="@mipmap/cjbd_img_fm_default" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_broadcat_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/c333333"
            android:textSize="24sp"
            tools:text="新中国成立70周年" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_broadcast_detail_create_img"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="fitXY"
                android:src="@mipmap/cjbd_img_fm_default" />

            <TextView
                android:id="@+id/tv_broadcast_detail_create_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c333333"
                android:textSize="18sp"
                tools:text="新华社"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_broadcast_detail_describe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:textSize="15sp"
            android:textColor="@color/c666666"
            tools:text="这里整合了70周年所有的资讯，方便大家观"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_broadcast_detail_back"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="16dp"
        android:fitsSystemWindows="true"
        android:src="@mipmap/icon_back_w" />
</FrameLayout>