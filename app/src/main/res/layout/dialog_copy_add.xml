<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_copy_add_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_copy_add_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/iv_copy_add_close"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:src="@mipmap/dialog_close" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_copy_add_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_copy_add_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="2"
                    android:text="检测到您复制的链接："
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_copy_add_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.7"
                    android:maxLines="1"
                    android:textColor="@color/c666666"
                    android:textSize="13sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="50dp"
                    android:background="@color/color_dedede" />

                <TextView
                    android:id="@+id/tv_copy_add_add_unread"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="添加到待读"
                    android:textColor="@color/c488def"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_copy_add_play"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="立即朗读"
                    android:textColor="@color/c999999"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_copy_add_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    style="?android:progressBarStyleLarge"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:indeterminateTint="#dedede" />

                <TextView
                    android:id="@+id/tv_copy_add_loading_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="正在获取文章信息"
                    android:textColor="@color/c666666"
                    android:textSize="13sp" />
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>


</LinearLayout>