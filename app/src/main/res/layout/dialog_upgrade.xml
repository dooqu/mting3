<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bannerImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@mipmap/dialog_upgrade" />

        <ImageView
            android:id="@+id/dialog_upgrade_close"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerInside"
            android:src="@mipmap/dialog_upgrade_close" />

        <TextView
            android:id="@+id/upgrade_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="轩辕听 v1.0"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/upgrade_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upgrade_name"
            android:layout_centerHorizontal="true"
            android:text="2019-08-08"
            android:textColor="#9ec6fe"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/upgrade_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bannerImg"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:lineHeight="20dp"
            android:maxLines="5"
            android:minLines="3"
            android:scrollbars="horizontal"
            android:singleLine="false"
            android:text="这里的是正文"
            android:textSize="16sp" />

        <View
            android:id="@+id/upgrade_hr"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/upgrade_content_text"
            android:background="@color/color_c9c9c9"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/upgrade_hr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/upgrade_button_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/upgrade_button_confirm"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@color/color_blue"
                android:textSize="17sp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>