<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_report"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_out_app"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@null"
            android:gravity="center"
            android:text="退出应用"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/create_dimen_16"
            android:layout_marginRight="@dimen/create_dimen_16"
            android:background="@color/cutting_line" />

        <Button
            android:id="@+id/btn_out_account"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@null"
            android:gravity="center"
            android:text="退出当前账号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_18" />


    </LinearLayout>


</LinearLayout>
