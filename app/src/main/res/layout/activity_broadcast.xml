<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.BroadcastActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_broadcast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_broadcast_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_blue_default"
                android:minHeight="208dp">

                <ImageView
                    android:id="@+id/iv_broadcast_img"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="85dp"
                    android:scaleType="fitXY"
                    android:src="@color/white" />

                <TextView
                    android:id="@+id/tv_broadcast_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="93dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/iv_broadcast_img"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:text="待读" />

                <TextView
                    android:id="@+id/tv_broadcast_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_broadcast_title"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/iv_broadcast_img"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:text="待读会自动存放您添加到轩辕 听内的文章" />

                <TextView
                    android:id="@+id/tv_broadcast_subscribed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="205dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="30dp"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:text="已订阅：1w+人" />
                <TextView
                    android:id="@+id/tv_broadcast_share2world"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="205dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_phone_click_btn"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    tools:text="分享到世界" />

            </RelativeLayout>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/srl_refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_broadcast"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_titlebar_back"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/icon_back_w" />

        <TextView
            android:id="@+id/tv_titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="你是啊大大撒旦" />

        <ImageView
            android:id="@+id/iv_titlebar_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:src="@mipmap/icon_share_w" />

        <ImageView
            android:id="@+id/iv_titlebar_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:src="@mipmap/icon_menu_w" />
    </LinearLayout>

</FrameLayout>