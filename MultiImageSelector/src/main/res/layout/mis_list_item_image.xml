<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.xylink.multi_image_selector.view.SquaredImageView
        android:id="@+id/image"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/mis_default_error"
        android:transitionName=""
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_long_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/gif_tag"
        android:text="@string/picture_long_chart"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/mask"
        android:src="@drawable/image_placeholder"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buybuybuy"
        android:drawableLeft="@drawable/video_icon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_gravity="top|right"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5.5dp"
        android:layout_marginRight="5.5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/mis_btn_unselected"/>

    <View
        android:id="@+id/mask2"
        android:background="@drawable/audio_placeholder2"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>